apiVersion: v1
kind: Service
metadata:
  annotations: {}
  labels:
    kubevirt.io/vm: {{ vm_name }}
  name: {{ vm_name }}
spec:
  ports:
  {%- for port in service_ports %}
  - name: {{ port.port_name }}
    port: {{ port.port }}
    protocol: {{ port.protocol }}
    targetPort: {{ port.targetPort }}
  {%- endfor %}
  selector:
    kubevirt.io/vm: {{ vm_name }}
  type: {{ service_type if service_type else 'ClusterIP' }}
status:
  loadBalancer: {}
