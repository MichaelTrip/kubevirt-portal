apiVersion: kubevirt.io/v1
kind: VirtualMachine
metadata:
  name: {{ vm_name }}
  labels:
    kubevirt.io/vm: {{ vm_name }}
    {% for tag in tags %}
    {{ tag.key }}: "{{ tag.value }}"
    {% endfor %}
spec:
  running: false
  template:
    metadata:
      labels:
        kubevirt.io/vm: {{ vm_name }}
        {% for tag in tags %}
        {{ tag.key }}: "{{ tag.value }}"
        {% endfor %}
      annotations:
        kubevirt.io/allow-pod-bridge-network-live-migration: "true"
    spec:
      evictionStrategy: LiveMigrate
      domain:
        cpu:
          cores: {{ cpu_cores }}
        resources:
          requests:
            memory: {{ memory }}G
          limits:
            memory: {{ memory }}G
        devices:
          disks:
            - name: {{ vm_name }}-pvc
              disk:
                bus: virtio
            - name: cloudinitdisk
              disk:
                bus: virtio
          interfaces:
            - name: podnet
              masquerade: {}
      networks:
        - name: podnet
          pod: {}
      volumes:
        - name: {{ vm_name }}-pvc
          persistentVolumeClaim:
            claimName: {{ vm_name }}-pvc
        - name: cloudinitdisk
          cloudInitNoCloud:
            {% if network_config %}
            networkData: |-
{% filter indent(14, True) %}
{% include 'snippets/network-config.yaml.j2' %}
{% endfilter %}
            {% endif %}
            {% if user_data and user_data.strip() %}
            userData: |-
{{ user_data | indent(14, True) }}
            {% endif %}
  dataVolumeTemplates:
    - metadata:
        name: {{ vm_name }}-pvc
        creationTimestamp: null
      spec:
        storage:
          resources:
            requests:
              storage: {{ storage_size }}Gi
          accessModes:
            - {{ storage_access_mode }}
          storageClassName: {{ storage_class }}
        source:
          http:
            url: {{ image_url }}
